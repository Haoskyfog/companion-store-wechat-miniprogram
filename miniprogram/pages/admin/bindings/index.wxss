}

/* 头部样式优化 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  background: white;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.title-section {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 4rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

.create-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.create-icon {
  font-size: 32rpx;
}