  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 60vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.selector-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
}

.selector-list {
  flex: 1;
  max-height: 400rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
