/* 绑定关系管理页面样式 */
.container {
  padding: 16rpx;
  background-color: #f6f7fb;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.create-btn {
  background-color: #7c3aed;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
}

.content {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.binding-list {
  padding: 16rpx;
}

.binding-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.binding-item:last-child {
  border-bottom: none;
}

.binding-info {
  flex: 1;
}

.binding-main {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.boss-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1f2937;
}

.arrow {
  margin: 0 16rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.staff-name {
  font-size: 30rpx;
  color: #7c3aed;
  font-weight: 500;
}

.binding-time {
  font-size: 24rpx;
  color: #6b7280;
}

.delete-btn {
  background-color: #ef4444;
  color: white;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  margin-left: 16rpx;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
}

.loading {
  padding: 120rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.visible {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  max-height: 500rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fafafa;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.cancel-btn {
  background: #f3f4f6;
  color: #374151;
}

.cancel-btn::after {
  border: none;
}

.confirm-btn {
  background: linear-gradient(135deg, #7c3aed, #a855f7);
  color: #fff;
}

.confirm-btn::after {
  border: none;
}