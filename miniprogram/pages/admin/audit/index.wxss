/* 管理员端 - 审核中心 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-btn {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-btn.active {
  color: #7c3aed;
  font-weight: 500;
}

.tab-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #7c3aed;
  border-radius: 2rpx;
}

/* 审核列表 */
.audit-list {
  padding: 32rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

/* 审核项 */
.audit-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
}

.audit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.staff-info, .boss-info {
  display: flex;
  align-items: center;
}

.staff-avatar, .boss-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #93c5fd, #67e8f9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  position: relative;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.boss-avatar {
  background: linear-gradient(135deg, #fca5a5, #c084fc);
}

.staff-details, .boss-details {
  display: flex;
  flex-direction: column;
}

.staff-name, .boss-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.staff-id, .boss-id {
  font-size: 24rpx;
  color: #999;
}

.boss-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

/* 审核内容 */
.audit-content {
  margin-bottom: 24rpx;
}

.audit-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  margin-right: 16rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 图片预览 */
.image-preview {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.image-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

/* 审核时间 */
.audit-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* 审核操作 */
.audit-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.reject-btn {
  background: #fee2e2;
  color: #dc2626;
}

.reject-btn::after {
  border: none;
}

.approve-btn {
  background: #d1fae5;
  color: #065f46;
}

.approve-btn::after {
  border: none;
}