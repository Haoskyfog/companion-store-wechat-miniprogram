/* 管理员端 - 订单管理 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  margin-bottom: 16rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.filter-section {
  padding: 24rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section:last-child {
  border-bottom: none;
}

.filter-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  border: 1rpx solid #e5e5e5;
}

.filter-btn.active {
  color: #7c3aed;
  background: #f3e8ff;
  border-color: #7c3aed;
}

.filter-btn::after {
  border: none;
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
}

/* 订单项 */
.order-item {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  position: relative;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.user-info {
  flex: 1;
}

.user-details {
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.user-ids {
  font-size: 24rpx;
  color: #999;
}

.order-badges {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.status-badge, .payment-badge, .complaint-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 状态样式 */
.status-pending {
  background: #fff7e6;
  color: #d97706;
}

.status-confirmed {
  background: #dbeafe;
  color: #2563eb;
}

.status-completed {
  background: #d1fae5;
  color: #065f46;
}

.status-cancelled {
  background: #fee2e2;
  color: #dc2626;
}

/* 支付状态样式 */
.payment-unpaid {
  background: #fff7e6;
  color: #d97706;
}

.payment-paid {
  background: #d1fae5;
  color: #065f46;
}

.payment-cancelled {
  background: #fee2e2;
  color: #dc2626;
}

/* 客诉状态样式 */
.complaint-none {
  background: #f5f5f5;
  color: #999;
}

.complaint-processing {
  background: #fef3c7;
  color: #d97706;
}

.complaint-resolved {
  background: #d1fae5;
  color: #065f46;
}

/* 订单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.amount-value {
  color: #dc2626;
  font-weight: 600;
}

.complaint-reason {
  color: #d97706;
}

/* 订单时间 */
.order-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-bottom: 20rpx;
}

/* 操作按钮 */
.order-actions {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  background: #7c3aed;
  color: white;
}

.action-btn::after {
  border: none;
}

.resolve-btn {
  background: #52c41a;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}
