/* 管理员端 - 老板充值管理 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
  padding-bottom: 32rpx;
}

/* 顶部导航 */
.header {
  background: #fff;
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-back {
  font-size: 36rpx;
  color: #666;
  margin-right: 32rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 64rpx;
}

/* 统计栏 */
.stats-bar {
  background: #fff;
  margin: 16rpx 32rpx;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 老板列表 */
.boss-list {
  padding: 0 32rpx;
}

.boss-item {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.boss-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f59e0b, #d97706);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

.avatar-emoji {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
}

.boss-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.boss-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.boss-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.boss-id {
  font-size: 24rpx;
  color: #666;
  background: #f6f7fb;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.boss-balance {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.balance-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.balance-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #10b981;
}

.boss-stats {
  margin-top: 4rpx;
}

.stat-text {
  font-size: 22rpx;
  color: #888;
}

.boss-actions {
  flex-shrink: 0;
}

.recharge-btn {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: white;
  background: linear-gradient(135deg, #10b981, #059669);
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  font-weight: 500;
}

.recharge-btn:active {
  transform: scale(0.95);
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
  background: #fff;
  margin: 32rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}
