/* 头像诊断页面样式 */
.page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: white;
  border-radius: 6rpx;
}

.results {
  background-color: white;
  border-radius: 8rpx;
  overflow: hidden;
}

.result-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar-section {
  margin-right: 20rpx;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #666;
}

.diagnostic-info {
  flex: 1;
  text-align: right;
}

.status {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.status-success {
  background-color: #e8f5e8;
  color: #2e7d32;
}

.status-warning {
  background-color: #fff3e0;
  color: #ef6c00;
}

.status-error {
  background-color: #ffebee;
  color: #c62828;
}

.message {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.avatar-url {
  font-size: 20rpx;
  color: #999;
  word-break: break-all;
  display: block;
}

.loading-state {
  text-align: center;
  padding: 60rpx;
  background-color: white;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}




