/* 管理员端 - 用户管理 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.search-input {
  position: relative;
  background: #f6f7fb;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.search-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

.search-actions {
  display: flex;
  gap: 16rpx;
}

.diagnostic-btn, .refresh-btn {
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border: none;
}

.diagnostic-btn {
  background: #7c3aed;
  color: white;
}

.refresh-btn {
  background: #10b981;
  color: white;
}

/* 角色筛选 */
.role-filter {
  background: #fff;
  margin-bottom: 16rpx;
}

.role-scroll {
  padding: 24rpx 32rpx;
}

.role-btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f6f7fb;
  white-space: nowrap;
}

.role-btn.active {
  color: #7c3aed;
  background: #f3e8ff;
}

/* 用户列表 */
.user-list {
  padding: 0 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

/* 用户项 */
.user-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #93c5fd, #67e8f9);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  overflow: hidden;
  position: relative;
}

.avatar-placeholder {
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
}

.avatar-error {
  color: #ef4444;
  font-size: 28rpx;
}

.retry-hint {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #6b7280;
  white-space: nowrap;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}

.role-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.role-boss {
  background: #dbeafe;
  color: #2563eb;
}

.role-staff {
  background: #d1fae5;
  color: #065f46;
}

.role-admin {
  background: #fef3c7;
  color: #d97706;
}

.role-super-admin {
  background: #fee2e2;
  color: #dc2626;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.user-actions {
  margin-left: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #7c3aed;
  background: #f3e8ff;
  border: 1rpx solid #7c3aed;
}

.action-btn::after {
  border: none;
}

/* 统计信息 */
.user-stats {
  display: flex;
  gap: 48rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 诊断按钮 */
.diagnostic-btn {
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  background-color: #ff9500;
  color: white;
  border-radius: 6rpx;
  border: none;
}
