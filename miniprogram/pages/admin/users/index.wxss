/* 管理员端 - 用户管理 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
  overflow-y: auto;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.search-input {
  position: relative;
  background: #f6f7fb;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
}

.search-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

.search-actions {
  display: flex;
  gap: 16rpx;
}

.diagnostic-btn, .refresh-btn {
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border: none;
}

.diagnostic-btn {
  background: #7c3aed;
  color: white;
}

.refresh-btn {
  background: #10b981;
  color: white;
}

/* 角色筛选 */
.role-filter {
  background: #fff;
  margin-bottom: 16rpx;
}

.role-scroll {
  padding: 24rpx 32rpx;
}

.role-btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f6f7fb;
  white-space: nowrap;
}

.role-btn.active {
  color: #7c3aed;
  background: #f3e8ff;
}

/* 用户列表 */
.user-list {
  padding: 0 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

/* 用户项 */
.user-item {
  background: #fff;
  margin: 0 32rpx 16rpx 32rpx;
  padding: 24rpx 32rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #93c5fd, #67e8f9);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
}

.avatar-placeholder {
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
}

.avatar-error {
  color: #ef4444;
  font-size: 28rpx;
}

.retry-hint {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #6b7280;
  white-space: nowrap;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}

.role-badge {
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  font-weight: 500;
  align-self: flex-start;
}

.role-boss {
  background: #dbeafe;
  color: #2563eb;
}

.role-staff {
  background: #d1fae5;
  color: #065f46;
}

.role-admin {
  background: #fef3c7;
  color: #d97706;
}

.role-super-admin {
  background: #fee2e2;
  color: #dc2626;
}

.user-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  border: 1rpx solid #7c3aed;
  min-width: 120rpx;
}

.role-btn {
  color: #7c3aed;
  background: #f3e8ff;
}

.inline-btn {
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  min-width: 100rpx;
  margin-left: 12rpx;
}

.action-btn::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 角色分区 */
.role-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx 32rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-count {
  font-size: 24rpx;
  color: #666;
  background: #f6f7fb;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 诊断按钮 */
.diagnostic-btn {
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  background-color: #ff9500;
  color: white;
  border-radius: 6rpx;
  border: none;
}

.create-staff-btn {
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  background-color: #10b981;
  color: white;
  border-radius: 6rpx;
  border: none;
}
