/* 管理员端 - 权益编辑 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  padding-bottom: 40rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  padding-top: calc(32rpx + env(safe-area-inset-top));
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #374151;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #1f2937;
  margin-right: 64rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 老板选择器 */
.boss-selector {
  padding: 32rpx;
}

.picker-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.picker-box .placeholder {
  color: #9ca3af;
}

.picker-box .arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

/* 内容编辑 */
.content-section {
  padding: 0 32rpx 32rpx;
}

.content-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #1f2937;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 保存按钮 */
.save-section {
  padding: 0 32rpx 32rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

/* 已设置列表 */
.list-section {
  padding: 0 32rpx;
}

.benefits-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.benefits-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.benefits-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.item-preview {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-actions {
  display: flex;
  gap: 16rpx;
  margin-left: 24rpx;
}

.edit-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #3b82f6;
  background: #eff6ff;
  border-radius: 8rpx;
}

.delete-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #ef4444;
  background: #fef2f2;
  border-radius: 8rpx;
}

.empty-state {
  padding: 60rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}
