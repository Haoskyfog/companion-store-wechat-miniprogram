/* 员工端 - 员工详情页 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef3f2 0%, #fef7ed 50%, #f0fdf4 100%);
}

/* 顶部导航 */
.header {
  position: relative;
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(12rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.nav-back {
  font-size: 32rpx;
  color: #7c3aed;
  margin-right: 24rpx;
  padding: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
  text-align: center;
  margin-right: 56rpx; /* 抵消返回按钮的宽度 */
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 员工详情 */
.staff-detail {
  padding: 32rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(12rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f472b6, #a855f7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji {
  font-size: 48rpx;
}

.staff-basic-info {
  flex: 1;
}

.staff-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 8rpx;
}

.staff-id {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
}

/* 音频播放区域 */
.audio-section {
  margin-bottom: 32rpx;
}

.audio-player {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(12rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 16rpx;
}

.audio-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.audio-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.audio-time {
  font-size: 24rpx;
  color: #6b7280;
}

.play-btn {
  background: linear-gradient(135deg, #7c3aed, #a855f7);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 120rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.play-btn::after {
  border: none;
}

.play-btn.playing {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.play-btn.loading {
  background: linear-gradient(135deg, #6b7280, #4b5563);
}

.play-btn[disabled] {
  opacity: 0.6;
}

/* 进度条容器 */
.progress-container {
  padding: 0 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(12rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding-top: 16rpx;
  padding-bottom: 24rpx;
}

.progress-slider {
  width: 100%;
}

/* 自我介绍图片 */
.intro-image-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(12rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.intro-image {
  cursor: pointer;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.intro-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 详细信息 */
.info-section {
  margin-bottom: 32rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.info-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  min-width: 140rpx;
}

.info-value {
  font-size: 28rpx;
  color: #6b7280;
  flex: 1;
}