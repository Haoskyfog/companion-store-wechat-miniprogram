/* 员工端 - 我的 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部背景 */
.top-bg {
  height: 384rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
  position: relative;
}

.mode-badge {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.settings-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 48rpx;
  height: 48rpx;
  font-size: 48rpx;
  color: #fff;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
  margin-top: -320rpx;
}

/* 用户信息卡片 */
.user-card {
  margin: 0 32rpx 32rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fca5a5 0%, #c084fc 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  border: 8rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}

.status-badge {
  padding: 4rpx 16rpx;
  background: #fce7f3;
  color: #ec4899;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.user-id {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  text-align: center;
}

.stat-box {
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-purple {
  background: #f3e8ff;
}

.stat-blue {
  background: #dbeafe;
}

.stat-green {
  background: #d1fae5;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
}

.stat-purple .stat-value {
  color: #8b5cf6;
}

.stat-blue .stat-value {
  color: #3b82f6;
}

.stat-green .stat-value {
  color: #10b981;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 快捷功能 */
.quick-grid {
  margin: 0 32rpx 32rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.quick-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.quick-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.quick-emoji {
  font-size: 48rpx;
}

.quick-label {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
}

/* 区块卡片 */
.section-card {
  margin: 0 32rpx 32rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header-special {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #fff;
}

.section-icon {
  font-size: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-label {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
}

.menu-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.menu-icon-emoji {
  font-size: 40rpx;
}

.menu-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
}

.menu-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.arrow {
  font-size: 48rpx;
  font-weight: 300;
  color: #9ca3af;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}
