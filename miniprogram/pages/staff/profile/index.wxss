/* 员工端 - 我的 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部导航 */
.header {
  position: relative;
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(12rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.nav-back {
  font-size: 32rpx;
  color: #7c3aed;
  margin-right: 24rpx;
  padding: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
  text-align: center;
  margin: 0 56rpx; /* 左右都留出空间给按钮 */
}

/* 刷新按钮 */
.refresh-btn {
  font-size: 36rpx;
  color: #7c3aed;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(124, 58, 237, 0.1);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.9);
  background: rgba(124, 58, 237, 0.2);
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
  padding: 32rpx 0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* 用户信息卡片 */
.user-card {
  margin: 32rpx 32rpx 32rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fca5a5 0%, #c084fc 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  border: 8rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-right: 32rpx;
  overflow: hidden;
}

.user-avatar .avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.user-info {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}

.status-badge {
  padding: 4rpx 16rpx;
  background: #fce7f3;
  color: #ec4899;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.user-id {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 统计数据 */
.stats-grid {
  display: flex;
  justify-content: center;
  text-align: center;
}

.stat-box {
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-purple {
  background: #f3e8ff;
}

.stat-blue {
  background: #dbeafe;
}

.stat-green {
  background: #d1fae5;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
}

.stat-purple .stat-value {
  color: #8b5cf6;
}

.stat-blue .stat-value {
  color: #3b82f6;
}

.stat-green .stat-value {
  color: #10b981;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 快捷功能 */
.quick-grid {
  margin: 0 32rpx 32rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.quick-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.quick-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.quick-emoji {
  font-size: 48rpx;
}

.quick-label {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
}

/* 区块卡片 */
.section-card {
  margin: 0 32rpx 32rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header-special {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #fff;
}

.section-icon {
  font-size: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-label {
  flex: 1;
  font-size: 32rpx;
  color: #1f2937;
}

.menu-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.menu-icon-emoji {
  font-size: 40rpx;
}

.menu-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
}

.menu-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

.arrow {
  font-size: 48rpx;
  font-weight: 300;
  color: #9ca3af;
}

/* 自我介绍图片 */
.intro-image-section {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.intro-image-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  display: block;
}

.intro-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 语音介绍 */
.audio-section {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.audio-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  display: block;
}

.audio-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
}

.audio-icon {
  font-size: 32rpx;
}

.audio-text {
  font-size: 28rpx;
  color: #374151;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}
