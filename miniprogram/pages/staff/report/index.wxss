/* 员工端 - 提交报备 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部导航 */
.header {
  background: #fff;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: 300;
  color: #6b7280;
  margin-right: 24rpx;
}

.header-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.header-link {
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: 600;
}

/* 提示框 */
.tip-box {
  margin: 32rpx;
  background: #dbeafe;
  border-left: 8rpx solid #3b82f6;
  border-radius: 0 16rpx 16rpx 0;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.tip-icon {
  font-size: 40rpx;
  color: #3b82f6;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #1e3a8a;
  line-height: 1.5;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
}

.form-container {
  padding: 0 32rpx 32rpx;
}

/* 表单区块 */
.form-section {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 老板选择器 */
.boss-selector {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.boss-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.boss-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fde047 0%, #fb923c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.boss-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.boss-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.boss-id {
  font-size: 24rpx;
  color: #9ca3af;
}

.arrow {
  font-size: 48rpx;
  font-weight: 300;
  color: #9ca3af;
}

/* 选择器输入 */
.picker-input {
  background: #fff;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1f2937;
}

/* 时长网格 */
.duration-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.duration-btn {
  padding: 16rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #6b7280;
  background: #fff;
}

.duration-btn.selected {
  border-color: #3b82f6;
  background: #dbeafe;
  color: #3b82f6;
  font-weight: 600;
}

/* 表单输入 */
.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #fff;
}

/* 平台网格 */
.platform-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.platform-btn {
  padding: 12rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #6b7280;
  background: #fff;
}

.platform-btn.selected {
  border-color: #3b82f6;
  background: #dbeafe;
  color: #3b82f6;
  font-weight: 600;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: #fff;
}

/* 复选框列表 */
.checkbox-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
}

.checkbox-label {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 上传区域 */
.upload-area {
  background: #fff;
  border: 4rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 96rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 28rpx;
  color: #6b7280;
}

.upload-hint {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 提交区域 */
.submit-section {
  margin-top: 48rpx;
  padding-bottom: 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.submit-hint {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 24rpx;
}
