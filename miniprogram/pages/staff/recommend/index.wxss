/* 员工端 - 推荐页 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部导航 */
.header {
  background: #fff;
  padding: 20rpx 32rpx;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-icon {
  font-size: 36rpx;
  opacity: 0.5;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.search-placeholder {
  color: #9ca3af;
}

.filter-btn {
  width: 80rpx;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
}

/* 区块 */
.section {
  padding: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 40rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 员工列表 */
.staff-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 员工网格布局 */
.staff-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  padding: 16rpx 0;
}

.staff-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.staff-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.staff-avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

.staff-avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji-circle {
  font-size: 48rpx;
}

.staff-id-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  text-align: center;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-width: 100%;
  margin-top: 8rpx;
}

.staff-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.staff-card.complete {
  border: 2rpx solid #10b981;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.15);
}

.staff-card.incomplete {
  border: 1rpx solid #e5e7eb;
}

.staff-card:active {
  transform: scale(0.98);
}

.staff-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.staff-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.complete-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji {
  font-size: 60rpx;
}

.staff-details {
  flex: 1;
  min-width: 0;
}

.staff-header {
  margin-bottom: 12rpx;
}

.staff-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.staff-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.status-badge {
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-online {
  background: #fce7f3;
  color: #ec4899;
}

.status-complete {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
}

.status-new {
  background: #fef3c7;
  color: #f59e0b;
}

.staff-id {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
  background: rgba(139, 92, 246, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.staff-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f3e8ff;
  color: #8b5cf6;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
  display: inline-block;
}

.staff-card.complete .tag:first-child {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
}

.staff-card.incomplete .tag:first-child {
  background: #fef3c7;
  color: #f59e0b;
}

.staff-intro {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.staff-actions {
  display: flex;
  gap: 16rpx;
}

.btn-primary {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-secondary {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #8b5cf6;
  color: #8b5cf6;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.btn-secondary-disabled {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #d1d5db;
  color: #d1d5db;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}
