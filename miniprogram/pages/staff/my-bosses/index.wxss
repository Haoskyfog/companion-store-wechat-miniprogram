/* 员工端 - 我的老板 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #fef3c7 0%, #fffbeb 100%);
}

/* 顶部导航 */
.header {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: 300;
  color: #fff;
  margin-right: 24rpx;
}

.header-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #92400e;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #92400e;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #b45309;
}

/* 老板列表 */
.boss-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.boss-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.12);
  box-sizing: border-box;
  width: 100%;
}

.boss-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.boss-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-emoji {
  font-size: 36rpx;
}

.boss-info {
  flex: 1;
  min-width: 0;
}

.boss-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 6rpx;
}

.boss-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.vip-badge {
  padding: 2rpx 12rpx;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
  flex-shrink: 0;
}

.boss-id {
  font-size: 22rpx;
  color: #6b7280;
}

.boss-stats {
  display: flex;
  align-items: center;
  background: #fef3c7;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 22rpx;
  color: #92400e;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 700;
}

.stat-value.balance {
  color: #16a34a;
}

.stat-value.consumption {
  color: #dc2626;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: rgba(146, 64, 14, 0.2);
}

.bottom-spacer {
  height: 60rpx;
}
