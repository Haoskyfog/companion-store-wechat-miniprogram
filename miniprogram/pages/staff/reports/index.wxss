/* 员工报备记录页面样式 */
.container {
  background-color: #f6f7fb;
  min-height: 100vh;
}

/* 筛选器 */
.filter-bar {
  background-color: white;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  padding: 0 16rpx;
  gap: 12rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.filter-normal {
  background-color: #f3f4f6;
  color: #6b7280;
}

.filter-active {
  background-color: #7c3aed;
  color: white;
}

/* 报备列表 */
.report-list {
  padding: 16rpx;
}

.report-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.report-main {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.boss-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
}

.report-status {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fef3c7;
  color: #d97706;
}

.status-approved {
  background-color: #d1fae5;
  color: #059669;
}

.status-rejected {
  background-color: #fee2e2;
  color: #dc2626;
}

.report-time {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.report-content {
  border-top: 1rpx solid #e5e7eb;
  padding-top: 16rpx;
}

.report-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
}

.info-label {
  font-size: 26rpx;
  color: #6b7280;
  min-width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
  word-break: break-all;
}

/* 图片区域 */
.images-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.images-label {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
  display: block;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120rpx, 1fr));
  gap: 12rpx;
}

.report-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

/* 审核信息 */
.audit-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
  background-color: #f9fafb;
  border-radius: 8rpx;
  padding: 16rpx;
}

.audit-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.audit-row {
  display: flex;
  align-items: center;
}

.audit-label {
  font-size: 24rpx;
  color: #6b7280;
  min-width: 120rpx;
  flex-shrink: 0;
}

.audit-value {
  font-size: 24rpx;
  color: #374151;
  flex: 1;
}

.load-more {
  padding: 32rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 26rpx;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
}

.loading {
  padding: 120rpx 0;
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
}