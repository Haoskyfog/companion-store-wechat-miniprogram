/* 员工端 - 主页 */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 顶部导航 */
.header {
  background: #fff;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mode-badge {
  padding: 6rpx 16rpx;
  background: #d1fae5;
  color: #059669;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.icon-btn {
  font-size: 44rpx;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
}

/* 快捷操作 */
.quick-actions {
  padding: 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.action-btn {
  padding: 32rpx;
  border-radius: 32rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.action-primary {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
}

.action-secondary {
  background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.action-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能导航网格 */
.function-grid {
  margin: 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.function-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.function-item:active {
  transform: scale(0.98);
}

.function-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.function-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 欢迎提示卡片 */
.welcome-card {
  margin: 0 32rpx 32rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.welcome-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.welcome-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e3a8a;
}

.welcome-text {
  font-size: 28rpx;
  color: #3730a3;
  line-height: 1.5;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}
