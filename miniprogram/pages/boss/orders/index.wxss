/* 老板端 - 我的订单 */
.page {
  background: #f6f7fb;
  min-height: 100vh;
  padding: 16rpx 0;
}

.order-list {
  padding: 0 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 32rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 订单项 */
.order-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
  position: relative;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.staff-info {
  display: flex;
  align-items: center;
}

.staff-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #93c5fd, #67e8f9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 32rpx;
}

.staff-details {
  display: flex;
  flex-direction: column;
}

.staff-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.staff-id {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fef3c7;
  color: #d97706;
}

.status-confirmed {
  background: #dbeafe;
  color: #2563eb;
}

.status-completed {
  background: #d1fae5;
  color: #065f46;
}

.status-cancelled {
  background: #fee2e2;
  color: #dc2626;
}

/* 订单内容 */
.order-content {
  margin-bottom: 24rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 订单时间 */
.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.reject-btn {
  background: #fee2e2;
  color: #dc2626;
}

.reject-btn::after {
  border: none;
}

.confirm-btn {
  background: #d1fae5;
  color: #065f46;
}

.confirm-btn::after {
  border: none;
}

.pay-btn {
  background: #dbeafe;
  color: #2563eb;
}

.pay-btn::after {
  border: none;
}

.cancel-btn {
  background: #fef3c7;
  color: #d97706;
}

.cancel-btn::after {
  border: none;
}

.amount-value {
  color: #dc2626;
  font-weight: 600;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}