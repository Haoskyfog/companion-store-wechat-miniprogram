/* 老板端 - 员工列表页 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef3f2 0%, #fef7ed 50%, #f0fdf4 100%);
}

/* 顶部导航 */
.header {
  position: relative;
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(12rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.nav-back {
  font-size: 32rpx;
  color: #7c3aed;
  margin-right: 24rpx;
  padding: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
  flex: 1;
  text-align: center;
  margin-right: 56rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 员工列表 */
.staff-list {
  padding: 32rpx;
}

.staff-item {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(12rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.staff-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-right: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f472b6, #a855f7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji {
  font-size: 48rpx;
}

.staff-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.staff-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.staff-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #374151;
}

.voice-badge {
  background: linear-gradient(135deg, #7c3aed, #a855f7);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.voice-text {
  font-size: 20rpx;
}

.staff-id {
  font-size: 24rpx;
  color: #6b7280;
}

.staff-intro {
  margin-top: 8rpx;
}

.intro-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.staff-actions {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.detail-btn {
  background: linear-gradient(135deg, #7c3aed, #a855f7);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.audio-btn {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 20rpx;
  width: 80rpx;
  height: 48rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-audio {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}