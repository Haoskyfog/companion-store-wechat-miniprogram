/* 文艺复兴风格 - VIP会员体系 */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #FDF7FF 0%, #F6F2FF 50%, #F9FAFF 100%);
  position: relative;
  font-family: 'Times New Roman', 'Georgia', serif;
}

/* 文艺复兴背景装饰 */
.page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(ellipse at 30% 20%, rgba(139, 92, 246, 0.06) 0%, transparent 60%),
    radial-gradient(ellipse at 70% 80%, rgba(168, 85, 247, 0.04) 0%, transparent 55%),
    radial-gradient(ellipse at 50% 50%, rgba(196, 181, 253, 0.03) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 文艺复兴风格标题 */
.vip-header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.header-content {
  position: relative;
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.renaissance-title {
  font-size: 42rpx;
  font-weight: 300;
  font-style: italic;
  color: #4c1d95;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(76, 29, 149, 0.3);
  font-family: 'Times New Roman', 'Georgia', serif;
  animation: renaissance-glow 4s ease-in-out infinite;
}

.renaissance-subtitle {
  font-size: 28rpx;
  font-weight: 400;
  font-style: italic;
  color: rgba(139, 92, 246, 0.85);
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 1rpx 2rpx rgba(139, 92, 246, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.renaissance-quote {
  font-size: 24rpx;
  font-style: italic;
  color: rgba(107, 114, 128, 0.8);
  font-weight: 300;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  font-family: 'Times New Roman', 'Georgia', serif;
}

/* 文艺复兴风格说明书按钮 */
.guide-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: rgba(253, 244, 255, 0.85);
  border: 1rpx solid rgba(139, 92, 246, 0.2);
  border-radius: 16rpx;
  padding: 10rpx 18rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  z-index: 3;
  transition: all 0.3s ease;
}

.guide-btn:active {
  transform: scale(0.96);
  box-shadow:
    0 2rpx 8rpx rgba(139, 92, 246, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.guide-icon {
  font-size: 26rpx;
  color: #7c3aed;
  opacity: 0.8;
}

.guide-text {
  font-size: 22rpx;
  color: #6b46c1;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 文艺复兴风格介绍区域 */
.intro-section {
  padding: 0 32rpx 32rpx;
  position: relative;
  z-index: 2;
}

.intro-card {
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(139, 92, 246, 0.12);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
}

.intro-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4c1d95;
  margin-bottom: 24rpx;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(76, 29, 149, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.intro-content {
  font-size: 26rpx;
  line-height: 1.9;
  color: rgba(107, 114, 128, 0.85);
  text-align: center;
  margin-bottom: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.intro-tips {
  font-size: 24rpx;
  color: rgba(139, 92, 246, 0.9);
  line-height: 1.8;
  background: rgba(139, 92, 246, 0.04);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  text-align: center;
  box-shadow: inset 0 2rpx 4rpx rgba(139, 92, 246, 0.05);
  font-family: 'Times New Roman', 'Georgia', serif;
}

/* 文艺复兴风格等级区域 */
.level-section {
  padding: 0 32rpx 32rpx;
  position: relative;
  z-index: 2;
}

.level-card {
  background: rgba(253, 244, 255, 0.9);
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
}

.level-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.current-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-icon {
  font-size: 48rpx;
}

.level-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #7c3aed;
}

.level-number {
  font-size: 24rpx;
  color: rgba(139, 92, 246, 0.6);
  background: rgba(139, 92, 246, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 进度条区域 */
.progress-section {
  margin-top: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #7c3aed;
}

.next-level-text {
  font-size: 24rpx;
  color: #64748b;
}

.progress-bar {
  height: 12rpx;
  background: rgba(139, 92, 246, 0.1);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #7c3aed 0%, #ec4899 100%);
  border-radius: 6rpx;
  transition: width 0.8s ease;
  box-shadow: 0 0 12rpx rgba(124, 58, 237, 0.4);
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #64748b;
}

/* 文艺复兴风格等级列表 */
.levels-section {
  padding: 0 32rpx 60rpx;
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  font-style: italic;
  color: #4c1d95;
  text-align: center;
  margin-bottom: 40rpx;
  text-shadow: 0 2rpx 8rpx rgba(76, 29, 149, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
  letter-spacing: 1rpx;
}

.chapter-title {
  font-size: 26rpx;
  font-weight: 500;
  font-style: italic;
  color: rgba(139, 92, 246, 0.85);
  margin: 36rpx 0 24rpx;
  text-align: center;
  background: rgba(139, 92, 246, 0.03);
  padding: 16rpx 28rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.1);
  font-family: 'Times New Roman', 'Georgia', serif;
  letter-spacing: 0.5rpx;
}

.levels-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.level-item {
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(139, 92, 246, 0.1);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.level-item.unlocked {
  border-color: rgba(139, 92, 246, 0.25);
  box-shadow:
    0 6rpx 24rpx rgba(139, 92, 246, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
}

.level-item.locked {
  opacity: 0.65;
  background: rgba(255, 255, 255, 0.05);
}

.level-item.unlocked:active {
  transform: translateY(-2rpx);
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 故事提示 */
.story-hint {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  font-size: 20rpx;
  color: rgba(124, 58, 237, 0.6);
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.level-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #4c1d95;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  text-shadow: 0 1rpx 2rpx rgba(76, 29, 149, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.level-desc {
  font-size: 24rpx;
  color: rgba(107, 114, 128, 0.8);
  line-height: 1.7;
  margin-bottom: 16rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.level-amount {
  font-size: 22rpx;
  font-weight: 500;
  color: #7c3aed;
  align-self: flex-start;
  background: rgba(139, 92, 246, 0.08);
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.level-rewards {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.reward-item {
  font-size: 22rpx;
  color: #7c3aed;
  background: rgba(124, 58, 237, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(124, 58, 237, 0.2);
}

/* 装饰元素 */
.decoration-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.decoration-star {
  position: absolute;
  top: 140rpx;
  right: 80rpx;
  font-size: 28rpx;
  animation: gentle-twinkle 4s ease-in-out infinite;
  color: rgba(139, 92, 246, 0.2);
  opacity: 0.6;
}

.decoration-sparkle-1 {
  position: absolute;
  bottom: 300rpx;
  right: 80rpx;
  font-size: 24rpx;
  animation: gentle-twinkle 3.5s ease-in-out infinite 1s;
  color: rgba(168, 85, 247, 0.15);
  opacity: 0.5;
}

.decoration-sparkle-2 {
  position: absolute;
  bottom: 180rpx;
  left: 70rpx;
  font-size: 20rpx;
  animation: gentle-twinkle 4.5s ease-in-out infinite 2s;
  color: rgba(196, 181, 253, 0.18);
  opacity: 0.4;
}

.decoration-flower {
  position: absolute;
  top: 280rpx;
  right: 120rpx;
  font-size: 26rpx;
  animation: gentle-float 6s ease-in-out infinite 1.5s;
  color: rgba(139, 92, 246, 0.2);
  opacity: 0.5;
}

/* 文艺复兴风格底部装饰 */
.bottom-decoration {
  padding: 50rpx 32rpx 80rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.muse-quote {
  font-size: 22rpx;
  color: rgba(107, 114, 128, 0.75);
  font-weight: 300;
  line-height: 1.8;
  background: rgba(253, 244, 255, 0.85);
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

/* 文艺复兴风格动画效果 */
@keyframes gentle-float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-4rpx) rotate(1deg); }
}

@keyframes gentle-twinkle {
  0%, 100% { opacity: 0.15; transform: scale(1); }
  50% { opacity: 0.35; transform: scale(1.05); }
}

@keyframes renaissance-glow {
  0%, 100% {
    text-shadow: 0 0 8rpx rgba(139, 92, 246, 0.3);
  }
  50% {
    text-shadow: 0 0 16rpx rgba(139, 92, 246, 0.5), 0 0 24rpx rgba(139, 92, 246, 0.3);
  }
}
