/* 圣诞风格 - VIP会员体系 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef3f2 0%, #fef7ed 50%, #f0fdf4 100%);
  position: relative;
}

/* 圣诞背景装饰 */
.page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(255, 182, 193, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(173, 216, 230, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 下雪效果 */
.page::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.8) 1px, transparent 1px),
    radial-gradient(circle at 30% 40%, rgba(255, 255, 255, 0.6) 1px, transparent 1px),
    radial-gradient(circle at 50% 10%, rgba(255, 255, 255, 0.7) 1px, transparent 1px),
    radial-gradient(circle at 70% 60%, rgba(255, 255, 255, 0.5) 1px, transparent 1px),
    radial-gradient(circle at 90% 30%, rgba(255, 255, 255, 0.9) 1px, transparent 1px),
    radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.4) 1px, transparent 1px),
    radial-gradient(circle at 40% 70%, rgba(255, 255, 255, 0.6) 1px, transparent 1px),
    radial-gradient(circle at 60% 90%, rgba(255, 255, 255, 0.5) 1px, transparent 1px),
    radial-gradient(circle at 80% 50%, rgba(255, 255, 255, 0.7) 1px, transparent 1px);
  background-size: 100px 100px, 120px 120px, 80px 80px, 150px 150px, 90px 90px, 110px 110px, 130px 130px, 70px 70px, 140px 140px;
  animation: snowfall 20s linear infinite;
  pointer-events: none;
  z-index: 1;
  opacity: 0.6;
}

/* 文艺复兴风格标题 */
.vip-header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.header-content {
  position: relative;
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.renaissance-title {
  font-size: 42rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2rpx;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(76, 29, 149, 0.3);
  font-family: 'Times New Roman', 'Georgia', serif;
  animation: renaissance-glow 4s ease-in-out infinite;
}

.renaissance-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #ea580c;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 1rpx 2rpx rgba(234, 88, 12, 0.3);
}

.renaissance-quote {
  font-size: 24rpx;
  font-style: italic;
  color: #dc2626;
  font-weight: 500;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(220, 38, 38, 0.2);
}

/* 文艺复兴风格说明书按钮 */
.guide-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: rgba(253, 244, 255, 0.85);
  border: 1rpx solid rgba(139, 92, 246, 0.2);
  border-radius: 16rpx;
  padding: 10rpx 18rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  z-index: 3;
  transition: all 0.3s ease;
}

.guide-btn:active {
  transform: scale(0.96);
  box-shadow:
    0 2rpx 8rpx rgba(139, 92, 246, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.guide-icon {
  font-size: 26rpx;
  color: #dc2626;
  opacity: 0.8;
}

.guide-text {
  font-size: 22rpx;
  color: #ea580c;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 文艺复兴风格介绍区域 */
.intro-section {
  padding: 0 32rpx 32rpx;
  position: relative;
  z-index: 2;
}

.intro-card {
  background: rgba(255, 255, 255, 0.35);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}

.intro-title {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 24rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

.intro-content {
  font-size: 26rpx;
  line-height: 1.9;
  color: rgba(107, 114, 128, 0.85);
  text-align: center;
  margin-bottom: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.intro-tips {
  font-size: 24rpx;
  color: rgba(139, 92, 246, 0.9);
  line-height: 1.8;
  background: rgba(139, 92, 246, 0.04);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.15);
  text-align: center;
  box-shadow: inset 0 2rpx 4rpx rgba(139, 92, 246, 0.05);
  font-family: 'Times New Roman', 'Georgia', serif;
}

/* 文艺复兴风格等级区域 */
.level-section {
  padding: 0 32rpx 32rpx;
  position: relative;
  z-index: 2;
}

.level-card {
  background: rgba(255, 255, 255, 0.35);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
}

.level-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.current-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-icon {
  font-size: 48rpx;
}

.level-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #dc2626;
}

.level-number {
  font-size: 24rpx;
  color: rgba(234, 88, 12, 0.8);
  background: rgba(234, 88, 12, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 进度条区域 */
.progress-section {
  margin-top: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ea580c;
}

.next-level-text {
  font-size: 24rpx;
  color: #64748b;
}

.progress-bar {
  height: 12rpx;
  background: rgba(234, 88, 12, 0.15);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #dc2626 0%, #f59e0b 100%);
  border-radius: 6rpx;
  transition: width 0.8s ease;
  box-shadow: 0 0 12rpx rgba(220, 38, 38, 0.4);
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #64748b;
}

/* 文艺复兴风格等级列表 */
.levels-section {
  padding: 0 32rpx 60rpx;
  position: relative;
  z-index: 2;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
}

.chapter-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #ea580c;
  margin: 36rpx 0 24rpx;
  text-align: center;
  background: rgba(234, 88, 12, 0.08);
  padding: 16rpx 28rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(234, 88, 12, 0.15);
  letter-spacing: 0.5rpx;
}

.levels-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.level-item {
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(139, 92, 246, 0.1);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.level-item.unlocked {
  border-color: rgba(139, 92, 246, 0.25);
  box-shadow:
    0 6rpx 24rpx rgba(139, 92, 246, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
}

.level-item.locked {
  opacity: 0.65;
  background: rgba(255, 255, 255, 0.05);
}

.level-item.unlocked:active {
  transform: translateY(-2rpx);
  box-shadow:
    0 8rpx 32rpx rgba(139, 92, 246, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

/* 故事提示 */
.story-hint {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  font-size: 20rpx;
  color: rgba(124, 58, 237, 0.6);
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.level-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #dc2626;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  text-shadow: 0 1rpx 2rpx rgba(220, 38, 38, 0.2);
}

.level-desc {
  font-size: 24rpx;
  color: rgba(107, 114, 128, 0.8);
  line-height: 1.7;
  margin-bottom: 16rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  font-family: 'Times New Roman', 'Georgia', serif;
}

.level-amount {
  font-size: 22rpx;
  font-weight: 500;
  color: #ea580c;
  align-self: flex-start;
  background: rgba(234, 88, 12, 0.12);
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(234, 88, 12, 0.2);
}

.level-rewards {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.reward-item {
  font-size: 22rpx;
  color: #dc2626;
  background: rgba(220, 38, 38, 0.12);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(220, 38, 38, 0.2);
}

/* 装饰元素 */
/* 圣诞装饰 */
.christmas-decoration {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 2;
  pointer-events: none;
}

.snowflake {
  font-size: 24rpx;
  animation: float 3s ease-in-out infinite;
  opacity: 0.8;
}

.christmas-light {
  font-size: 28rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.light-1 {
  animation-delay: 0s;
}

.light-2 {
  animation-delay: 1s;
}

/* 文艺复兴风格底部装饰 */
.bottom-decoration {
  padding: 50rpx 32rpx 80rpx;
  text-align: center;
  position: relative;
  z-index: 2;
}

.muse-quote {
  font-size: 22rpx;
  color: rgba(107, 114, 128, 0.75);
  font-weight: 300;
  line-height: 1.8;
  background: rgba(253, 244, 255, 0.85);
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow:
    0 4rpx 16rpx rgba(139, 92, 246, 0.06),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  font-family: 'Times New Roman', 'Georgia', serif;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

/* 圣诞动画效果 */
@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-10rpx) rotate(180deg); }
}

@keyframes twinkle {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

@keyframes snowfall {
  0% {
    transform: translateY(-100px) translateX(0);
  }
  100% {
    transform: translateY(100vh) translateX(50px);
  }
}
