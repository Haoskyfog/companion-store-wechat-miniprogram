/* 老板端 - 我的钱包 */
.page {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 余额卡片 */
.balance-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.balance-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.balance-header {
  margin-bottom: 20rpx;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.8;
}

.balance-amount {
  display: flex;
  align-items: baseline;
}

.amount-symbol {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: bold;
}

/* 支付记录区域 */
.payment-section {
  background: white;
  margin-top: 20rpx;
  min-height: calc(100vh - 300rpx);
}

.section-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态 */
.loading {
  padding: 60rpx;
  text-align: center;
  color: #999;
}

/* 支付记录列表 */
.payment-list {
  padding: 0 40rpx;
}

.payment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.payment-left {
  flex: 1;
}

.payment-game {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.payment-staff {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.payment-time {
  font-size: 24rpx;
  color: #999;
}

.payment-right {
  text-align: right;
}

.payment-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.payment-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.status-paid {
  background: #e8f5e8;
  color: #52c41a;
}

.status-cancelled {
  background: #fff2f0;
  color: #ff4d4f;
}

.status-unpaid {
  background: #fff7e6;
  color: #faad14;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
