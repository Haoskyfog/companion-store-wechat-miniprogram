/* 老板端 - 推荐页 - 现代优雅风格 */
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f0f9ff 0%, #fef7ed 50%, #f0fdf4 100%);
  position: relative;
}

/* 背景装饰 */
.page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(124, 58, 237, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 顶部导航 - 亚克力玻璃效果 */
.header {
  position: relative;
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 10;
  overflow: hidden;
  min-height: 100rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.header-blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
}

.header-shine {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.header-content {
  position: relative;
  z-index: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-title {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #7c3aed 0%, #3b82f6 50%, #06b6d4 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1rpx;
}

.title-subtitle {
  font-size: 22rpx;
  color: #6b7280;
  letter-spacing: 2rpx;
}

.header-actions {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(124, 58, 237, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.icon-btn:active {
  transform: scale(0.95);
  background: rgba(124, 58, 237, 0.2);
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx;
  background: transparent;
  position: relative;
  z-index: 5;
}

.search-container {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: rgba(124, 58, 237, 0.05);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.search-input:focus-within {
  background: rgba(124, 58, 237, 0.1);
  box-shadow: 0 0 0 2rpx rgba(124, 58, 237, 0.2);
}

.search-icon {
  font-size: 36rpx;
  opacity: 0.6;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.search-placeholder {
  color: #9ca3af;
}

.search-placeholder {
  color: #9ca3af;
}

.filter-btn {
  width: 80rpx;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
}

/* 区块 */
.section {
  padding: 24rpx 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 40rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 员工列表 */
.staff-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.staff-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(124, 58, 237, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.staff-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(124, 58, 237, 0.15);
}

.staff-info {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.staff-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-emoji {
  font-size: 60rpx;
}

.staff-details {
  flex: 1;
  min-width: 0;
}

.staff-header {
  margin-bottom: 10rpx;
}

.staff-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.staff-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

.status-badge {
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-online {
  background: #fce7f3;
  color: #ec4899;
}

.status-new {
  background: #fef3c7;
  color: #f59e0b;
}

.staff-id {
  font-size: 24rpx;
  color: #9ca3af;
}

.staff-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f3e8ff;
  color: #8b5cf6;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.staff-intro {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.staff-actions {
  display: flex;
  gap: 12rpx;
}

.btn-primary {
  flex: 1;
  height: 72rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  color: #fff;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
}

.btn-secondary {
  width: 72rpx;
  height: 72rpx;
  border: 2rpx solid #8b5cf6;
  color: #8b5cf6;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

/* 员工网格布局 */
.staff-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  padding: 16rpx 0;
}

.staff-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.staff-item:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 20rpx rgba(124, 58, 237, 0.15);
  border-color: rgba(124, 58, 237, 0.3);
}

.staff-avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

.staff-avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder-circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-emoji-circle {
  font-size: 48rpx;
}

.staff-id-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  text-align: center;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-width: 100%;
  margin-top: 8rpx;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}
