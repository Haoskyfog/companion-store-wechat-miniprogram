/* 老板端 - 主页 - 圣诞风格 */
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #fef3f2 0%, #fef7ed 50%, #f0fdf4 100%);
  position: relative;
}

/* 圣诞背景装饰 */
.page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(255, 182, 193, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(173, 216, 230, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 顶部导航 - 亚克力玻璃效果 */
.header {
  position: relative;
  padding: 16rpx 32rpx;
  padding-top: calc(16rpx + env(safe-area-inset-top));
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 10;
  overflow: hidden;
  min-height: 80rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(5rpx) saturate(180%);
  -webkit-backdrop-filter: blur(5rpx) saturate(180%);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.header-blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 182, 193, 0.2) 0%, rgba(173, 216, 230, 0.2) 100%);
}

.header-shine {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.header-content {
  position: relative;
  z-index: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-title {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2rpx;
}

.title-subtitle {
  font-size: 20rpx;
  color: #f97316;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.notification-btn {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(4rpx);
  -webkit-backdrop-filter: blur(4rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.bell-icon {
  font-size: 36rpx;
}

.notification-dot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ef4444;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

/* 圣诞装饰 */
.christmas-decoration {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 2;
  pointer-events: none;
}

.snowflake {
  font-size: 24rpx;
  animation: float 3s ease-in-out infinite;
  opacity: 0.8;
}

.christmas-light {
  font-size: 28rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.light-1 {
  animation-delay: 0s;
}

.light-2 {
  animation-delay: 1s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-10rpx) rotate(180deg); }
}

@keyframes twinkle {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* 滚动区域 */
.scroll-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

/* 容器通用样式 */
.section-container {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

/* 轮播图区域 */
.banner-section {
  padding-top: 32rpx;
}

.banner-swiper {
  height: 400rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15);
}

.banner-item {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.banner-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-bg-gradient {
  width: 100%;
  height: 100%;
}

.banner-gradient-christmas {
  background: linear-gradient(135deg, #dc2626 0%, #ea580c 50%, #f59e0b 100%);
}

.banner-gradient-warm {
  background: linear-gradient(135deg, #f97316 0%, #fb923c 50%, #fbbf24 100%);
}

.banner-gradient-festive {
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 50%, #fbbf24 100%);
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 100%);
}

/* 圣诞装饰元素 */
.christmas-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.christmas-star {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  font-size: 48rpx;
  animation: twinkle 2s ease-in-out infinite;
  filter: drop-shadow(0 0 8rpx rgba(255, 215, 0, 0.8));
}

.christmas-tree {
  position: absolute;
  top: 30rpx;
  left: 40rpx;
  font-size: 56rpx;
  animation: float 3s ease-in-out infinite;
}

.christmas-gift {
  position: absolute;
  bottom: 80rpx;
  left: 60rpx;
  font-size: 40rpx;
  animation: float 2.5s ease-in-out infinite;
}

.christmas-santa {
  position: absolute;
  top: 50rpx;
  right: 60rpx;
  font-size: 52rpx;
  animation: float 3.5s ease-in-out infinite;
}

.christmas-cookie {
  position: absolute;
  bottom: 100rpx;
  right: 50rpx;
  font-size: 36rpx;
  animation: twinkle 2.5s ease-in-out infinite;
}

.christmas-bell {
  position: absolute;
  top: 40rpx;
  left: 50rpx;
  font-size: 44rpx;
  animation: twinkle 1.8s ease-in-out infinite;
}

.christmas-candle {
  position: absolute;
  bottom: 120rpx;
  left: 40rpx;
  font-size: 38rpx;
  animation: float 2.8s ease-in-out infinite;
}

.christmas-snow {
  position: absolute;
  font-size: 32rpx;
  opacity: 0.7;
  animation: snow-fall 4s linear infinite;
}

.snow-1 {
  top: -40rpx;
  left: 20%;
  animation-delay: 0s;
}

.snow-2 {
  top: -40rpx;
  left: 60%;
  animation-delay: 1.5s;
}

.snow-3 {
  top: -40rpx;
  left: 80%;
  animation-delay: 3s;
}

@keyframes snow-fall {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 0.7;
  }
  100% {
    transform: translateY(500rpx) rotate(360deg);
    opacity: 0;
  }
}

/* 玻璃卡片效果 */
.banner-glass {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 3;
  width: 100%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(5rpx) saturate(180%);
  -webkit-backdrop-filter: blur(5rpx) saturate(180%);
  border-radius: 24rpx 24rpx 0 0;
  padding: 24rpx 32rpx 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-bottom: none;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.2);
  margin: 0;
  box-sizing: border-box;
}

.banner-content {
  text-align: center;
  color: #fff;
}

.banner-title {
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.95;
  margin-bottom: 16rpx;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

.banner-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(4rpx);
  border-radius: 16rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-top: 6rpx;
}

/* 公告区域 */
.notice-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.glass-card {
  position: relative;
  border-radius: 32rpx;
  padding: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.12);
}

.card-blur {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(6rpx) saturate(180%);
  -webkit-backdrop-filter: blur(6rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.card-shine {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
  animation: shine 4s infinite;
}

.notice-card {
  color: #1f2937;
}

.notice-header {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.notice-icon-wrapper {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #fef3f2 0%, #fef7ed 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.2);
}

.notice-icon {
  font-size: 36rpx;
  z-index: 1;
}

.notice-sparkle {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  font-size: 20rpx;
  animation: twinkle 1.5s ease-in-out infinite;
}

.notice-content-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.notice-time {
  font-size: 24rpx;
  color: #6b7280;
}

.notice-body {
  position: relative;
  z-index: 1;
}

.notice-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #374151;
  word-break: break-all;
}

.card-decoration {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
  z-index: 1;
  pointer-events: none;
}

.decoration-star {
  font-size: 32rpx;
  opacity: 0.3;
  animation: twinkle 3s ease-in-out infinite;
}

.decoration-tree {
  font-size: 36rpx;
  opacity: 0.3;
  animation: float 4s ease-in-out infinite;
}

/* 相册区域 */
.gallery-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #dc2626 0%, #f59e0b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 1rpx;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #f97316;
  font-weight: 500;
}

.arrow-icon {
  font-size: 32rpx;
  font-weight: 300;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.gallery-item {
  position: relative;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(5rpx) saturate(180%);
  -webkit-backdrop-filter: blur(5rpx) saturate(180%);
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gallery-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.gallery-cover {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gallery-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #fef3f2 0%, #fef7ed 100%);
}

.gallery-emoji {
  font-size: 64rpx;
}

.gallery-name {
  padding: 20rpx 16rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #374151;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(4rpx);
  -webkit-backdrop-filter: blur(4rpx);
  word-break: break-all;
  line-height: 1.4;
}

.bottom-spacer {
  height: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* 滚动容器样式 */
.scroll-content {
  flex: 1;
  overflow-y: auto;
}

/* 图片错误处理 */
.banner-bg-image {
  background-color: #f3f4f6;
}

/* 新订单弹窗 */
.order-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.order-popup {
  width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  animation: popupIn 0.3s ease;
}

@keyframes popupIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.popup-header {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.popup-icon {
  font-size: 48rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.popup-content {
  padding: 40rpx;
}

.popup-info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.popup-info-row:last-child {
  border-bottom: none;
}

.info-label {
  color: #6b7280;
  font-size: 28rpx;
}

.info-value {
  color: #1f2937;
  font-size: 28rpx;
  font-weight: 500;
}

.info-value.highlight {
  color: #ec4899;
  font-size: 32rpx;
  font-weight: bold;
}

.popup-actions {
  display: flex;
  border-top: 1rpx solid #f3f4f6;
}

.popup-btn {
  flex: 1;
  padding: 32rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.popup-btn.secondary {
  color: #6b7280;
  background: #f9fafb;
}

.popup-btn.primary {
  color: #fff;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
}
