/* 新订单提醒 */
.order-notification {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

.notification-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.notification-icon {
  font-size: 36rpx;
}

.notification-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.notification-arrow {
  color: #fff;
  font-size: 40rpx;
  font-weight: 300;
}

.settings-btn {
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  width: 48rpx;
  height: 48rpx;
  font-size: 48rpx;
  color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1rpx solid rgba(139, 92, 246, 0.08);
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  top: 32rpx;
  right: 32rpx;
  width: 64rpx;
  height: 64rpx;
  font-size: 36rpx;
  color: #6b7280;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(139, 92, 246, 0.08);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: scale(0.9);
  background: rgba(139, 92, 246, 0.1);
}

/* 滚动区域 */
.scroll-content {
