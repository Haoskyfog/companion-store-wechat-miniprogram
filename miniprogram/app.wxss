/* 全局基础样式 & Acrylic 主题 */
page {
  background: #f6f7fb;
  color: #0f172a;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Hiragino Sans GB", "Helvetica Neue", Arial, sans-serif;
  min-height: 100%;
}

.acrylic-bg {
  background:
    radial-gradient(1200px 800px at 20% 10%, rgba(168, 85, 247, 0.22), transparent 60%),
    radial-gradient(900px 600px at 80% 0%, rgba(59, 130, 246, 0.18), transparent 55%),
    radial-gradient(900px 700px at 70% 85%, rgba(236, 72, 153, 0.18), transparent 60%),
    linear-gradient(180deg, rgba(11, 18, 32, 0.04), rgba(11, 18, 32, 0.08)),
    #f6f7fb;
}

.surface {
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(139, 92, 246, 0.06);
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.05);
  backdrop-filter: blur(16px) saturate(180%);
  -webkit-backdrop-filter: blur(16px) saturate(180%);
  border-radius: 20rpx;
}

.surface-strong {
  background: rgba(255, 255, 255, 0.97);
  border: 1px solid rgba(139, 92, 246, 0.08);
  box-shadow: 0 8px 32px rgba(139, 92, 246, 0.06);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border-radius: 24rpx;
}

.card {
  padding: 24rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}

.sub {
  font-size: 26rpx;
  color: #64748b;
}

.muted {
  color: #94a3b8;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.between {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.chip {
  padding: 8rpx 14rpx;
  background: rgba(124, 58, 237, 0.08);
  color: #7c3aed;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #7c3aed 0%, #ec4899 100%);
  color: #ffffff;
  border-radius: 999rpx;
  padding: 18rpx 26rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 10px 30px rgba(124, 58, 237, 0.22);
}

.btn-ghost {
  border: 1px solid rgba(124, 58, 237, 0.24);
  color: #7c3aed;
  border-radius: 999rpx;
  padding: 16rpx 26rpx;
  text-align: center;
  background: rgba(124, 58, 237, 0.06);
}

.section-gap {
  margin-bottom: 24rpx;
}
