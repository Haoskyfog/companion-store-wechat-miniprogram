/* 全局雪花容器 */
.global-snow-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  pointer-events: none;
  z-index: 1;
  overflow: hidden;
}

.snowflake {
  position: absolute;
  top: -30rpx;
  color: rgba(255, 255, 255, 0.7);
  animation: global-snow-fall linear infinite;
  user-select: none;
  text-shadow: 0 0 2rpx rgba(255, 255, 255, 0.3);
}

@keyframes global-snow-fall {
  0% {
    transform: translateY(0) translateX(0) rotate(0deg);
    opacity: 0.9;
  }
  20% {
    transform: translateY(20vh) translateX(8rpx) rotate(72deg);
    opacity: 0.8;
  }
  40% {
    transform: translateY(40vh) translateX(-6rpx) rotate(144deg);
    opacity: 0.7;
  }
  60% {
    transform: translateY(60vh) translateX(12rpx) rotate(216deg);
    opacity: 0.6;
  }
  80% {
    transform: translateY(80vh) translateX(-4rpx) rotate(288deg);
    opacity: 0.5;
  }
  100% {
    transform: translateY(100vh) translateX(0) rotate(360deg);
    opacity: 0.3;
  }
}