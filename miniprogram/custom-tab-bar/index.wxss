.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 8rpx 16rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #5f6472;
  font-size: 22rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.icon-container {
  position: relative;
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item .icon {
  width: 48rpx;
  height: 48rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.emoji-fallback {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  line-height: 1;
}

.tab-item.active {
  color: #7c3aed;
  font-weight: 600;
}

.tab-item.active .icon-container {
  background: linear-gradient(135deg, rgba(124, 58, 237, 0.1), rgba(236, 72, 153, 0.1));
  box-shadow: 0 4rpx 12rpx rgba(124, 58, 237, 0.2);
  transform: translateY(-4rpx);
}

.tab-item.active .icon {
  transform: scale(1.1);
}

.emoji-fallback {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  line-height: 1;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active .emoji-fallback {
  transform: translate(-50%, -50%) scale(1.1);
}

/* 点击效果 */
.tab-item:active {
  transform: scale(0.95);
}

.tab-item:active .icon-container {
  transform: translateY(-2rpx);
}

/* 悬停效果（在小程序中不生效，但可以保留用于未来扩展） */
.tab-item:hover {
  opacity: 0.8;
}

