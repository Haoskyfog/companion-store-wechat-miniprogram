.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 8rpx 16rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #5f6472;
  font-size: 22rpx;
}

.icon-container {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-item .icon {
  width: 48rpx;
  height: 48rpx;
}

.emoji-fallback {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  line-height: 1;
}

.tab-item.active {
  color: #7c3aed;
  font-weight: 600;
}
